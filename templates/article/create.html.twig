{% extends 'base.html.twig' %}

{% block title %}Création d'un nouvel article{% endblock %}

{% block body %}

<style>
label{
    color : White;
    font-family : Montserrat;
    margin-right : 10px;
}

input{
    font-family: 'Montserrat', sans-serif;
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.025rem;
    color: #EF2D56;
    background-color: #FFFFFF;
    border-radius: 1.25rem;
    -webkit-border-radius: 1.25rem;
    -moz-border-radius: 1.25rem;
    padding: 0.35rem 0.75rem;
    border-style: solid;
    border-width: 0.125rem;
    border-color: #EF2D56;
}
button{
    font-family: 'Montserrat', sans-serif;
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.025rem;
    font-style: normal;
    color: #EF2D56;
    background-color: #FFFFFF;
    border-radius: 1.25rem;
    -webkit-border-radius: 1.25rem;
    -moz-border-radius: 1.25rem;
    padding: 0.35rem 0.75rem;
    border-style: solid;
    border-width: 0.125rem;
    border-color: #5BC0EB;
}
.contain{
    text-align: center;
}
</style>

    <div class="contain">
        <h1>Création d'un nouvel article</h1>

        {{form_start(form)}}
        {{form_rest(form)}}
        <button type=\"submit\">Créer</button>
        {{form_end(form)}}
    </div>
{% endblock %}

