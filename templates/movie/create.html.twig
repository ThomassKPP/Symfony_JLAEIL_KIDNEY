{% extends 'base.html.twig' %}

{% block title %}Création d'un nouveau film{% endblock %}

{% block body %}

<style>
.required{
    color : White;
    font-family : Montserrat;
}

input{
    font-family: 'Montserrat', sans-serif;
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.025rem;
    color: #EF2D56;
    background-color: #FFFFFF;
    border-radius: 1.25rem;
    -webkit-border-radius: 1.25rem;
    -moz-border-radius: 1.25rem;
    padding: 0.35rem 0.75rem;
    border-style: solid;
    border-width: 0.125rem;
    border-color: #EF2D56;
}
button{
    font-family: 'Montserrat', sans-serif;
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.025rem;
    font-style: normal;
    color: #EF2D56;
    background-color: #FFFFFF;
    border-radius: 1.25rem;
    -webkit-border-radius: 1.25rem;
    -moz-border-radius: 1.25rem;
    padding: 0.35rem 0.75rem;
    border-style: solid;
    border-width: 0.125rem;
    border-color: #5BC0EB;
}
.contain{
    text-align: center;
}
</style>

    <div class="contain">
    <h1>Création d'un nouveau titre</h1>

    {{form_start(form)}}
    {{form_rest(form)}}
    <button type=\"submit\">Créer</button>
    {{form_end(form)}}
    </div>
{% endblock %}

